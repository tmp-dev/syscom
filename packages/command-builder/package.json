{
  "name": "@syscom/command-builder",
  "version": "0.1.0",
  "description": "",
  "keywords": [],
  "main": "lib/index.js",
  "typings": "lib/types/n.d.ts",
  "files": [
    "dist"
  ],
  "author": "Ian Wijma <ian@wij.ma>",
  "repository": {
    "type": "git",
    "url": "https://github.com/tmp-dev/syscon-package-starter"
  },
  "license": "MIT",
  "engines": {
    "node": ">=14.15",
    "npm": ">=6.14",
    "tsc": ">=4.1"
  },
  "scripts": {
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts && typedoc --out docs --theme minimal src",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache"
  },
  "pre-commit": [
    "lint"
  ],
  "lint-staged": {
    "{src}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "\\.(test|spec)\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.ts"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/rollup-plugin-json": "^3.0.2",
    "@types/rollup-plugin-node-resolve": "^4.1.0",
    "cross-env": "^7.0.3",
    "jest": "^26.6.3",
    "jest-config": "^26.6.3",
    "pre-commit": "^1.2.2",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.38.0",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typedoc": "^0.20.16",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@syscom/core": "^0.1.0"
  }
}
